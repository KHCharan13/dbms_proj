    <body><div class="container">
      <form action="/login" method="POST">
            <div class="container">
                <br>
                <br><br>
                <h1>Login Details</h1>
                <p>Enter the Details to login</p>

                <label for="userid"><b>User id</b></label>
                <br>
                <input type="text" placeholder="Enter User id" id='userid'name="userid" required>
                <br>
                <label for="psw"><b>Password</b></label>
                <br>
                <input type="password" placeholder="Enter password " id="psw" name="psw" required>
                <br>
                <button style="width: fit-content;" type="button" id="showp" onclick="myFunction()">show password</button>
                <div class="Buttons">
                    <br>
                    <button type="submit" class="Login">Login</button>
                </div>
            </div>
        </form>
        <br>
        <% if(data1 === 0){ %>
            <p>Details are incorrect</p>
        <% } %>
        <br>
        <div class="signup">
            <p>If You don't have an account click on the signup button below</p>
            <br>
                    <a class="button" href="/signup">Sign Up</a>
                    <a class="button" href="index.html">Cancel</a>
        </div>
    </div>
    </body>
    <script>
        function myFunction() {
  var x = document.getElementById("psw");
  var y = document.getElementById("icon");
  if (x.type === "password") {
    x.type = "text";
  } else {
    x.type = "password";
  }
  if (y.class === "fas fa-eye") {
    y.class = "fas fa-eye-slash"
  } else {
    y.class === "fas fa-eye"
  }
  
}
 
    </script>
